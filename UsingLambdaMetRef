package methodRef;
import java.util.*;
class B{
	static int add(int x, int y){
		return x+y;
	}
	int sub(int x, int y){
		return x>y?x-y:y-x;
	}
}
interface FIMathOp{
	int operation(int x, int y);
}
public class UsingLambdaMetRef {
	static void fn(FIMathOp fi){
		Scanner sc=new Scanner(System.in);
		System.out.println("Enter x: ");
		int x=sc.nextInt();
		//sc.nextLine();
		System.out.println("Enter y: ");
		int y=sc.nextInt();
		System.out.println("The result : " +fi.operation(x, y));
	}

	public static void main(String[] args) {
		//using object of FIMatOp in fn
		FIMathOp fi= (x,y) -> x*y;
		fn(fi);
		
		//use lambda directly as fn parameter 
		fn((x, y) -> y == 0 ? 0 : x/y);
		
		//using Method Reference
		FIMathOp fi2= new B()::sub;
		fn(fi2);
		
		//using Method Reference directly as fn parameter
		fn(B::add);
			

	}

}
